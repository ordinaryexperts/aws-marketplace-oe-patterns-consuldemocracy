{
  "variables": {
    "aws_access_key": "{{env `AWS_ACCESS_KEY`}}",
    "aws_secret_key": "{{env `AWS_SECRET_KEY`}}",
    "source_ami_name": "debian-10-amd64-20220911-1135",
    "version": "{{env `VERSION`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-0c7ed0ec32865e4db",
      "instance_type": "m5.xlarge",
      "ssh_username": "admin",
      "ami_name": "ordinary-experts-patterns-consul-{{user `version`}}-{{isotime \"20060102-0304\"}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "{{.Vars}} sudo -H -S -E bash '{{.Path}}'",
      "script": "./packer/setup.sh"
    }
  ],
  "post-processors": [
    [
      {
        "output": "manifest.json",
        "strip_path": true,
        "type": "manifest"
      }
    ]
  ]
}
